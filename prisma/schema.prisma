// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Championship {
  id         String   @id @default(uuid())
  name       String
  bar_code   String   @unique
  price      Decimal
  created_at DateTime @default(now())

  ChampionshipCategory ChampionshipCategory[]
  @@map("championships")
}

model Category {
  id   String @id @default(uuid())
  name String

  ChampionshipCategory ChampionshipCategory[]
  @@map("categories")
}

model ChampionshipCategory {
  id              String       @id @default(uuid())
  id_championship String
  id_category     String
  championship    Championship @relation(fields: [id_championship], references: [id])
  category        Category     @relation(fields: [id_category], references: [id])

  @@map("championships_categories")
}
